# Emulate 256 color mode
term    screen-256color

startup_message off

# Enable the alternate window
altscreen on

# the - means login
defshell bash

# lines of scrollback!
defscrollback 4096

caption splitonly ''
#caption splitonly '%{=u dd} '
hardstatus alwayslastline
hardstatus string ' %H  %?%-w%?%{-}%?%{+b R}&%{-} %t%:%{+b R}&%{-}-%?%+w %?%{-}%= %{-}%{-}%1` %{= kk}'
