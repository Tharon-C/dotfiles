# Emulate 256 color mode
term    screen-256color

startup_message off

# Enable the alternate window
altscreen on

# the - means login
defshell bash

# lines of scrollback!
defscrollback 4096

hardstatus alwayslastline
hardstatus string ' %H  %= %1` '
caption string ' %{= kw}%-w%?%{-}%?%F%{= dk} %n %t %?%?%{= kw}%+w %?%{= kk}'
