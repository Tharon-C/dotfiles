# Emulate 256 color mode
term    screen-256color

startup_message off

# Makes Control+o become the escape combination
escape ^Oo

# Enable the alternate window
altscreen on

# the - means login
defshell -bash

# lines of scrollback!
defscrollback 4096

hardstatus alwayslastline "%{= kD} %H %{= bD}%n %W %=%C%a "
