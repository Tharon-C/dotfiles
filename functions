#! /usr/bin/env bash

function mancat {
    man -P cat $@ | col -b 
}

#function cd {
#   command cd $1; 
#   ls;
#}

function ju {
    first=$1
    shift;
    cd $(find $first -type d | fzf --query="$@")
}

function get_ps1 {
    tput -S <<< "
        cup 0 0
        el
        cup 1 0
        el
        cup 0 0
    "
    width=$(tput cols)
    echo $(ls -p | xargs | head -c $width)    
    echo "$(basename $(pwd))/● "
}
