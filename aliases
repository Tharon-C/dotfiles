alias _='source ~/.bashrc'
alias bin='xxd -pb'
alias gb='git branch'
alias gl='git log'
alias grep='grep --color'
alias gs='git status'
alias hs='ghci'
alias kwmr='launchctl stop com.koekeishiya.kwm;launchctl start com.koekeishiya.kwm'
alias ll='ls -lhA --color'
